<script>
function createPlayerInviteModal() {return {
    name: '',
    message: '',
    search: '',
    users: [],
    async getUsers() {
		let response_json = await _get('<%= api_url %>/users', {search: this.search})
        if (!response_json) return
		if (!response_json.users) return console.log(response_json)
        if (Array.isArray(response_json.users)) {
    		this.users = response_json.users
        }
    },
    async send() {
        var users = this.users.filter(i => i.name == this.search)
        if (users.length != 1) return
        var user = users[0]
		let response_json = await _put(`<%= api_url %>/communities/<%= params.community_id %>/users/${user.id}?invitation`, {message: this.message})
        if (!response_json) return
    }
}}
</script>
<div class="modal" id="create-player-invite-modal" x-data="createPlayerInviteModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Send invite</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form class="modal-form">
                    <div class="form-item">
                        <label for="create-player-invite-player" class="form-label form-required" title="The player to send an invite to">Player</label>
                        <input class="form-control" list="player-options" id="create-player-invite-player" name="player" placeholder="Search for a player..." required x-model="search" @input.debounce="getUsers">
                        <datalist id="player-options">
                            <template x-for="user in users">
                                <option :value="user.name">
                            </template>
                        </datalist>
                    </div>

                    <div class="form-item">
                        <label for="create-player-invite-message" class="form-label" title="You can add the reason for the invite, or an identifier like a username from a different game etc.">Message</label>
                        <input type="text" class="form-control" id="create-player-invite-message" name="message" maxlength="100">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-teal bg-teal-h" data-bs-dismiss="modal" @click="<%= send or "send" %>">Send</button>
                <button type="button" class="btn bg-gray bg-gray-h" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>